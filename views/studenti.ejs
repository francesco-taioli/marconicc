        var table = $('#studenti').DataTable( {
            processing:true,
            lengthChange: false,
            buttons: ['excel'],
            "columns": [
                { "data": "cognome" },
                { "data": "nome" },
                { "data": "cf" },
                { "data": "sesso" },
                { "data": "data_di_nascita" },
                { "data": "stato" },
                { "data": "cap_provenienza" },
                //{ "data": "scelta_indirizzo" },
                { "data": "anno_scolastico" },
                { "data": "anno" },
                { "data": "cod_cat" },
                { "data": "media_voti" },
                { "data": "classe_futura" }
            ]
        } );
        table.buttons().container()
            .appendTo( $('div.eight.column:eq(0)', table.table().container()) );
    } );
</script>
