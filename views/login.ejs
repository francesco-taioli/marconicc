<% include header %>
<body class="pageBackground">

<!--sematic login-->
<div class="ui middle aligned center aligned grid ">
    <div class="columnLogSign">
        <form class="ui large form" action="<%= endpoint.utenti.login %>" method="post">
            <div class="ui stacked segment">
                <h2 class="ui teal image header">
                    <div class="content">
                        Login
                    </div>
                </h2>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input type="text" name="username" placeholder="username">
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input type="password" name="password" placeholder="Password">
                    </div>
                </div>
                <button class="ui fluid large teal submit button" type="submit">Login</button>
            </div>
        </form>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="ui error message">
            <div class="alert alert-danger"><%= message %></div>
        </div>
        <% } %>

        <div class="ui message">
            need an account? <a href="<%= endpoint.utenti.signup %>">Sign Up</a>
        </div>
    </div>
</div>
<script>
    $(document).ready(
            function () {
                $('.ui.checkbox').checkbox();
            });
</script>
</body>
</html>
