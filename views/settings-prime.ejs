                                <div class="field">
                                    <label>Alunni massimi in una classe</label>
                                    <input type="number" name="alunni_max" placeholder="Qual è il numero di alunni massimi di una classe?" id="alunni-max" min="0">
                                </div>
                            </div>
                        </div>
                        <div class="field">
                            <label>Numero femmine in una classe</label>
                            <input name="max_femmine" placeholder="Quante femmine per classe?" type="number" onkeyup="setDataRealtimeNumberOfFemmine()"
                                   onchange="setDataRealtimeNumberOfFemmine()" id="femmine" min="0">
                        </div>
                        <div class="field">
                            <label>Numero persone con la stessa nazionalità</label>
                            <input name="nazionalita" placeholder="Quante nazionaità diverse per classe?" type="number" id="nazionalita" min="0">
                        </div>
                        <div class="field">
                            <label>Numero nazionalità per classe</label>
                            <input name="naz_per_classe" placeholder="Quanti alunni con la stessa nazionalità per classe?" type="number" id="naz_per_classe" min="0">
                        </div>
                        <div class="field">
                            <label>Numero persone che hanno residenza simile</label>
