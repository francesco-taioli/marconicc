<script>
    function  createModal() {
        $('.ui.modal')
            .modal('show')
        ;
    }

    //this function set the number of student for class
    function setDataRealtimeNumberOfStudents() {
        var classe = $('#classe').dropdown('get value');
        if (classe == "prima") {
            alunniPrima = $("#alunni-in-classe-prima").text();
            maxNumberOfAlunni = $("#alunni-max").val();
            $("#classe-realtime").html(Math.floor(alunniPrima / maxNumberOfAlunni))

        }
    }

    function addTag() {
        var tag = $("#nome-tag").val();
        var descrizione = $("#descrizione-tag").val();

        $.ajax({
            url: '/insert-tag',
            data: {
                "tag": tag,
                "descrizione" : descrizione
            },
            type: 'get',
            success: function (data) {

            },
            error: function (xhr, status, error) {

                console.log('Error: ' + error.message);

            },
        });
    }

    function addSettings() {

        var d = new Date();
        var data = d.getFullYear() + "-" + d.getMonth() + "-" + d.getDate();
        var alunniMin = parseInt($("#alunni-min").val());
        var alunniMax = parseInt($("#alunni-max").val());
        var femmine = parseInt($("#femmine").val());
        var stranieri = parseInt($("#stranieri").val());
        var residenza = parseInt($("#residenza").val());
        var iniziale = parseInt($("#iniziale").val());
        var mediaMin = parseFloat($("#mediaMin").val());
        var mediaMax = parseFloat($("#mediaMax").val());
        var bocciati = parseInt($("#bocciati").val());
        $.ajax({
            url: '/insert-settings-prime',
            data: {
                "data" : data,
                "alunniMin" : alunniMin,
                "alunniMax": alunniMax ,
                "femmine" : femmine ,
                "stranieri" : stranieri,
                "residenza" : residenza,
                "iniziale" : iniziale,
                "mediaMin" : mediaMin,
                "mediaMax" : mediaMax,
                "bocciati" : bocciati
            },
            type: 'get',
            success: function (data) {
                document.getElementById("message").className = "ui success message";
            },
            error: function (xhr, status, error) {
                document.getElementById("negativeMessage").className = "ui warning message";
                console.log('Error: ' + error.message);

            },
        });
    }

    function addPriority() {
        var priorita = [];
        priorita.push("legge_104");
        priorita.push("legge_107");
        priorita.push("alunni");
        priorita.push("desiderata");
        priorita.push("ripetenti");
        priorita.push("sesso");
        priorita.push("nazionalita");
        priorita.push("CAP");
        priorita.push("voto");

        $.ajax({
            url: '/insert-priorita',
            data: {
                "priorita" : priorita
            },
            type: 'get',
            success: function (data) {

            },
            error: function (xhr, status, error) {

                console.log('Error: ' + error.message);

            },
        });
    }

    //this function check that the form is compiled Strina release to check!!
    $(document).ready(function() {
        var settings = [];
        $.ajax({
            type: "GET",
            url: '/get-past-settings',
            data: {
                format: 'json'
            },
            error: function () {
                alert('Errore di scaricamento dei dati /get-past-settings');
            },
            dataType: 'json',

            success: function (listaSettings) {
                settings = listaSettings;

                var s = "";
                s+= "<ul>";
                for (var i = 0; i < settings.length; i++){
                    s+= "<li><a onclick='createModal()' style='color: black'>" + settings[i].data + "</a></li>";
                }
                s+= "</ul>";
                document.getElementById("rowForInsertDate").innerHTML = s;
            }
        });



        document.getElementById("sendButton").setAttribute("class", "ui disabled button")
        var $fields = $(".field :input");
        $fields.keyup(function () {

            var $emptyFields = $fields.filter(function () {

                // remove the $.trim if whitespace is counted as filled
                return $.trim(this.value) === "";
            });

            if (!$emptyFields.length) {
                document.getElementById("sendButton").setAttribute("class", "ui button")
                document.getElementById("messageCompila").setAttribute("class", "hiddenMessage")
            } else {
                document.getElementById("messageCompila").setAttribute("class", "")
                document.getElementById("sendButton").setAttribute("class", "ui disabled button")
            }
        });
    });

</script>


