<% include header %>

<style>
    .contenitoreClasse{
        list-style-type: none;
    }

    .contenitoreClasse li{
        margin: 0 5px 5px 5px;
        padding: 5px;
        width: 120px;
        border: 1px solid #eee;
    }

    .wrapperClasse{
        border: 1px solid #eee;
        display:table-cell;
    }

