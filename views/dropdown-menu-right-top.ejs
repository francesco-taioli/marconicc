<!--this file represent the dropwdonw menu for select years and class-->
<!--it's on right-top-->
<%if (typeof dropDown !== 'undefined') { %>

<div class="right menu">
    <div class="ui floating labeled icon dropdown item">
        <span class="text" id="classe-futura-label"> <%= sessioneIniziale.classeFutura.substring(0,1) + sessioneIniziale.classeFutura.substring(1).toLocaleLowerCase() %> </span>
    </div>
    <div class="ui floating labeled icon dropdown item" id="classi-anno">
        <span class="text"> <%= sessioneIniziale.annoScolastico%> </span>
        <i class="dropdown icon"></i>
        <div class="menu">
            <%for(var classe in dropDown){%>
            <div class="ui dropdown item" id="<%= classe.substring(0, 1) + classe.substring(1).toLowerCase(); %>">
                <i class="dropdown icon left"></i>
                <%= classe.substring(0, 1) + classe.substring(1).toLowerCase(); %>

                <div class="menu left">
                    <% for(var anno in dropDown[classe]){ %>
                    <a class="item"><%= dropDown[classe][anno].anno_scolastico %></a>
                    <% } %>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</div>

<% } %>
<script>
    $(document).ready(function () {
        $("#classi-anno").dropdown({
            onChange: function (val, id, element) {
                changeYearAndCLass(val, element.parent('div').closest('.ui.dropdown.item').attr("id").toUpperCase(),false)
            }
        });
    });
</script>